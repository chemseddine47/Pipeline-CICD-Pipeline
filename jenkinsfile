pipeline {
    agent any

    stages {
        stage('install') {
            steps {
                sh '''
                    apt-get update && apt-get install -y docker-ce-cli
                '''
            }

        }

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
            }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
